<Window x:Class="KTAPrerequisitesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KTAPrerequisitesApp" xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <DataGrid x:Name="dataGridInstallType" HorizontalAlignment="Left" Height="252" Margin="13,126,0,0" VerticalAlignment="Top" Width="465"/>
        <Button x:Name="B_Install" Content="Install" HorizontalAlignment="Left" Margin="400,52,0,0" VerticalAlignment="Top" Width="75" Click="B_Install_Click" RenderTransformOrigin="-0.809,2.717"/>
        <ComboBox x:Name="comboBoxInstallType" SelectedIndex="0" HorizontalAlignment="Left" Margin="202,25,0,0" VerticalAlignment="Top" Width="273" SelectionChanged="comboBoxInstallType_SelectionChanged">
            <System:String>TotalAgility WebApp server (Including OPMT)</System:String>
            <System:String>TotalAgility Web Only (Including OPMT)</System:String>
            <System:String>TotalAgility Transformation Server</System:String>
            <System:String>TotalAgility Transformation Server (OPMT)</System:String>
            <System:String>TotalAgility Intergration Server</System:String>
            <System:String>TotalAgility DB Only</System:String>
        </ComboBox>
        <ProgressBar x:Name="progressBarSiteType" HorizontalAlignment="Left" Margin="13,83,0,0" VerticalAlignment="Top" Width="462" Height="28" Background="#FF252525"/>
        <Label x:Name="labelSiteTypeProgress" Content="" HorizontalAlignment="Left" Margin="247,111,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Please select the KTA install type:" HorizontalAlignment="Left" Margin="13,21,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
